            android:id="@+id/image"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/meeting" /> -->
      
        <RelativeLayout  
            android:id="@+id/timeAxisItem"  
            android:layout_width="wrap_content"  
            android:layout_height="wrap_content"  
            android:layout_below="@+id/show_time"  
            android:layout_marginTop="-20dp"  
            android:layout_toRightOf="@+id/show_time"  
            android:background="@drawable/float_bg"  
            android:padding="10dp" >

            <TextView
                android:id="@+id/timeAxisTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="19dp"
                android:text="TextView"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/timeAxisRoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/timeAxisTitle"
                android:layout_below="@+id/timeAxisTitle"
                android:paddingLeft="20dp"
                android:singleLine="true"
                android:text="TextView"
                android:textColor="#000000"
                android:textSize="12sp" />
      
        </RelativeLayout>

        <TextView
            android:id="@+id/show_time"
            android:layout_width="62dp"
            android:layout_height="18dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/meeting_time"
            android:paddingLeft="4dp"
            android:textColor="#ffffff"
            android:gravity="center_vertical"
            android:textSize="10dp" />
      
    </RelativeLayout>  
