<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/id_toolbar_new_meet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorPrimary"
    android:minHeight="?attr/actionBarSize"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
    app:theme="@style/ThemeOverlay.AppCompat.ActionBar" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<ImageButton
            android:id="@+id/NewMeetSendBtn"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="#00000000"
            android:src="@android:drawable/ic_menu_send" />

    <ImageButton
        android:id="@+id/newMeetSaveBtn"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:background="#00000000"
        android:src="@android:drawable/ic_menu_save" />

    <ImageButton
        android:id="@+id/newMeetSaveRightBtn"
    		android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
        android:background="#00000000"
        android:src="@android:drawable/ic_menu_save" />

    <ImageButton
        android:id="@+id/newMeetDeleteBtn"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/newMeetSaveBtn"
        android:layout_alignTop="@+id/newMeetSaveBtn"
        android:background="#00000000"
        android:src="@android:drawable/ic_menu_delete" />

    </RelativeLayout>

</android.support.v7.widget.Toolbar>

